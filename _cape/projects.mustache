<!DOCTYPE html>
<html lang="en">
  <head>
    <title>RWDF Projects</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css" media="screen">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <h1>RWDF Projects</h1>

      <div class="row">

        {{#pages}}
          <div class="col-6 col-sm-4 col-lg-2">

            <!-- LISTING OF RWDF PROJECTS -->
<!--             <h2>{{title}}</h2> -->
            <h3>{{featuretitle}}</h3>
            <img src="{{{featureimg}}}" alt="{{featuretitle}}" class="img-thumbnail" />
            {{# featureblurb }}
              <p>{{featureblurb}}</p>
            {{/ featureblurb }}

            <!-- CAPE Promote/Demote buttons -->
            <a href="{{{cape_io.flag_url}}}removed&id={{_id}}&index={{_index}}&type={{_type}}&result=json" class="remove" title="REMOVE">
              <i class="icon-ban-circle"></i>
            </a>
            <a href="{{{cape_io.flag_url}}}added&id={{_id}}&index={{_index}}&type={{_type}}&result=json" class="add" title="ADD">
              <i class="icon-thumbs-up"></i>
            </a>
            
          </div>
        {{/pages}}

      </div>

    </div>

    <!-- JavaScript plugins (requires jQuery) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function() {
        var list_type = '{{cape_io.list_type}}'
        $("a.remove").click(function(e) {
          var url = $(this).attr('href');
          $(this).parent().remove();
          $.get(url);
          return false;
        });
        if ('pending' == list_type) {
          $("a.add").click(function(e) {
            var url = $(this).attr('href');
            $(this).parent().remove();
            $.get(url);
            return false;
          });
        }
      });
    </script>

  </body>
</html>
